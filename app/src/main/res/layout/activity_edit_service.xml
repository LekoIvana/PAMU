<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header slika (možeš zamijeniti drugom ako želiš) -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:src="@drawable/login_header_neww"
            android:scaleType="centerCrop"
            android:contentDescription="Edit header" />

        <!-- Glavni sadržaj -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uredi uslugu"
                android:textColor="#89135b"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Izmijeni podatke o usluzi"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif" />

            <!-- Naziv usluge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit" />

                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Naziv usluge"
                    android:background="@null"
                    android:paddingStart="8dp"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Opis usluge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit" />

                <EditText
                    android:id="@+id/editTextDescription"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Opis usluge"
                    android:background="@null"
                    android:paddingStart="8dp"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Spremi gumb -->
            <Button
                android:id="@+id/buttonSave"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Spremi promjene"
                android:textColor="#FFFFFF"
                android:backgroundTint="#89135b"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
