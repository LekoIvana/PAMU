<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Lijeva strana: info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userReservationDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datum: 20.05.2025. u 13:00"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/userReservationCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategorija: Frizura"
                android:textColor="#6A1B9A"
                android:textStyle="italic"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/userReservationNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Napomena: šišanje"
                android:textColor="#555555"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Desna strana: gumb za otkazivanje -->
        <ImageButton
            android:id="@+id/cancelReservationButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_rejected"
            android:contentDescription="Otkaži termin" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
