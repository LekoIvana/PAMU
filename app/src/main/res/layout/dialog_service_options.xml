        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/optionEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Uredi"
        android:textColor="#89135b"
        android:textSize="16sp"
        android:padding="12dp" />

